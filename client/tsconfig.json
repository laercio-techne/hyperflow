{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "store/*": ["store/*"],
      "reducers/*": ["reducers/*"],
      "pages/*": ["pages/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "assets/*": ["assets/*"],
      "constants/*": ["constants/*"],
      "types/*": ["types/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"],
      "config/*": ["config/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  
}
